{% extends 'base.html.twig' %}

{% block title %}New Prescription{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-primary mb-3">
                <div class="card-header">
                    <h1>Create new Prescription</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_row(form._token) }}
                    
                    <div class="form-group">
                       
                        {{ form_widget(form) }}
                    </div>

                    <div class="form-group">
                        <h3>Lignes de Prescription</h3>
                        <div data-collection-holder class="container">
                            {% for lignePrescription in form.lignePrescriptions %}
                                <div class="form-group">
                                    {{ form_widget(lignePrescription) }}
                                    <button type="button" class="btn btn-danger remove-ligne-prescription">Remove</button>
                                </div>
                            {% endfor %}
                        </div>
                        <button type="button" class="btn btn-success add-ligne-prescription">Add Ligne Prescription</button>
                    </div>

                   

                    {{ form_end(form) }}
                    <a href="{{ path('app_prescription_index') }}">back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

