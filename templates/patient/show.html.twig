{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block content%}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ patient.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ patient.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ patient.age }}</td>
            </tr>
            <tr>
                <th>sexe</th>
                <td>{{ patient.sexe }}</td>
            </tr>
            <tr>
                <th>GS</th>
                <td>{{ patient.GS }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ patient.mobile }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ patient.adresse }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_patient_edit', {'id': patient.id}) }}"class="btn btn-lg btn-primary">edit</a>
        {{ include('patient/_delete_form.html.twig') }}
    </div>

    
    <a class="btn btn-lg btn-success" href="{{ path('app_rdv_new',{ patientId: patient.id }) }}">Creer un rdv</a>
</br>
<a href="{{ path('app_patient_index') }}">back to list</a>

    
{% endblock %}
