{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-primary mb-3">
                <div class="card-header">
                    <h1>REGISTER</h1>
                </div>
                <div class="card-body">

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}    
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}

                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    
                    <label for="role_user" class="form-label">Role</label>
                    <select id="role_user" name="role" class="form-select"  >
                        <option value="ROLE_RECEPTIONISTE">RECEPTIONISTE</option>
                        <option value="ROLE_CAISSIER">CAISSIER</option>
                        <option value="ROLE_MEDECIN">MEDECIN</option>
                        <option value="ROLE_INFIRMIER">INFIRMIER</option>
                        <option value="ROLE_ADMIN">LABORATIN</option>
                        <option value="ROLE_MEDECIN">PHARMACIEN</option>
                        <option value="ROLE_ADMIN">ADMIN</option>
                    </select>
                   

                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn btn-lg btn-primary">Register</button>
                    {{ form_end(registrationForm) }}

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

