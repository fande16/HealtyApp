{% extends 'base.html.twig' %}

{% block title %}Pharmacien index{% endblock %}

{% block content%}
    <h1>Pharmacien index</h1>

    <div class="data-table-container">
    <table id="example" class="table table-striped " style="width:100%">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacien in pharmaciens %}
            <tr>
                <td>{{ pharmacien.id }}</td>
                <td>{{ pharmacien.nom }}</td>
                <td>{{ pharmacien.prenom }}</td>
                <td>{{ pharmacien.adresse }}</td>
                <td>{{ pharmacien.telephone }}</td>
                <td>
                    <a href="{{ path('app_pharmacien_show', {'id': pharmacien.id}) }}">show</a>
                    <a href="{{ path('app_pharmacien_edit', {'id': pharmacien.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <a href="{{ path('app_pharmacien_new') }}"class="btn btn-lg btn-primary">Create new</a>
{% endblock %}
