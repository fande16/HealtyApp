                <td>{{ infirmiere.id }}</td>
                <td>{{ infirmiere.nom }}</td>
                <td>{{ infirmiere.prenom }}</td>
                <td>{{ infirmiere.telephone }}</td>
                <td>{{ infirmiere.email }}</td>
                <td>
                    <a href="{{ path('app_infirmiere_show', {'id': infirmiere.id}) }}">show</a>
