{% extends 'base.html.twig' %}

{% block title %}LignePrescription index{% endblock %}

{% block content%}
    <h1>LignePrescription index</h1>

    <div class="data-table-container">
    <table id="example" class="table table-striped " style="width:100%">

        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Quantite</th>
                <th>Posologie</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligne_prescription in ligne_prescriptions %}
            <tr>
                <td>{{ ligne_prescription.id }}</td>
                <td>{{ ligne_prescription.Libelle }}</td>
                <td>{{ ligne_prescription.quantite }}</td>
                <td>{{ ligne_prescription.posologie }}</td>
                <td>{{ ligne_prescription.date ? ligne_prescription.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_ligne_prescription_show', {'id': ligne_prescription.id}) }}">show</a>
                    <a href="{{ path('app_ligne_prescription_edit', {'id': ligne_prescription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <a href="{{ path('app_ligne_prescription_new') }}"class="btn btn-lg btn-primary">Create new</a>
{% endblock %}
